<h2>My Lists</h2>


<% id = current_user ? current_user.id : nil %>
<% @lists.where(user_id: id).each_with_index do |list, index| %>
  <%= link_to list do %>
    <div class='list-item <%= index%2 == 0 ? 'even' : 'odd' %>'>
      <%= list.name %>
    </div>
  <% end %>
<% end %>
<br>

<%= link_to 'New List', new_list_path if current_user %>
