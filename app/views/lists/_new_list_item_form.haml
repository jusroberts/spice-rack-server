- new_list_item = ListItem.new list_id: list.id, in_stock: true
= form_for new_list_item, html: { class: 'row' } do |f|
  .hide= submit_tag
  = f.hidden_field :list_id
  .in-stock= f.hidden_field :in_stock
  .small-9.medium-6.columns.end= text_field_tag :title, nil, placeholder: "...new item?", class: 'new-item-title', required: true, autocorrect: 'off'
.row
  .columns
    %span.add-new-item.pantrify-button= icon 'plus', 'item'
    .new-item-in-stock.pantrify-button
      = list_item_in_stock_icon new_list_item
      have it!
