-set_session_list_id(@list.id)
%h2
  =@list.name
%p
  =@list.description
.row
  =link_to new_item_path do
    .button.column.small-12.medium-3
      Add New Item
%br
%br
.row
  .stock.columns.small-5
    .row.head
      Out of Stock
    .out-of-stock-list
      -out_of_stock_items(@items, @list).each_with_index do |item, index|
        .row{class: "#{even_or_odd(index)}"}
          =link_to edit_item_path(item) do
            .item-name.columns.small-9.item
              =item.name
          .columns.small-3
            =form_for(item) do |f|
              .form
                =f.hidden_field :in_stock, :value => 1
              .actions
                =f.submit 'Got it!', class: "item"
  .stock.columns.small-5
    .row.head
      In Stock
    .in-stock-list
      -in_stock_items(@items, @list).each_with_index do |item, index|
        .row{class: "#{even_or_odd(index)}"}
          =link_to edit_item_path(item) do
            .item-name.columns.small-9.item
              =item.name
          .columns.small-3
            =form_for(item) do |f|
              .form
                =f.hidden_field :in_stock, :value => 0
              .actions
                =f.submit "I'm out!",  class: "item"
.clearfix
.row
  .button.brown.columns.small-5.medium-3
    =link_to 'Back to all Lists', lists_path
  .button.brown.columns.small-5.medium-3
    =link_to 'Edit List Properties', edit_list_path(@list)
%br
%br
%br
=link_to 'Destroy', @list, method: :delete, data: {confirm: "Are you sure?"}
