.item{ class: "#{ ' out' unless list_item.in_stock }" }
  .item-update
    = list_item.item.name
    = form_for list_item, method: :put do |f|
      = f.hidden_field :in_stock, value: !list_item.in_stock
      = icon (list_item.in_stock ? 'check-square-o' : 'square-o'), nil, data: { switch: !list_item.in_stock ? 'check-square-o' : 'square-o' }
  .bump
  .text-center
    %span{ list_item_image_options(list_item) }
  .item-delete.text-right
    = form_for list_item, method: :delete do |f|
      = icon 'trash'